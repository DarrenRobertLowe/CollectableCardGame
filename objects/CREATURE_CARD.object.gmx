            <string>/// interaction
event_inherited();

if (castingChecking) {
    castingChecking = false;
    
    if (summoned == false) {
        if (basicActivationChecks()) {
            global.selectingSummonSlot = true;
            waitTime = room_speed;
            global.summoning = true;
            global.currentCard = id;
        }
    }
}

// make the slots glow
if (global.selectingSummonSlot) {
    forceHideCards();
    glowCardSlots();
}


/// INTERACTIVITY
if (waitTime &gt; 0) {
    waitTime--;
} else {
    if (global.currentCard == id) {
        if (global.selectingSummonSlot) {
            // allow us to select a slot
            allowCancelSelectSummonSlot();
            selectSummonSlot();
        }
    }
    
    if (global.GAME_PHASE == "combat") {
        allowCancelCombatTarget();
        
        // attack
        if (position == "board") {
            if (clicked == true) {
                if (!global.choosingAttackTarget) {
                    clicked = false;
                    // On our turn, allow us to be selected as an attacker
                    combat_trySelectAsAttacker();
                } else {
                    show_debug_message("we're now trying to choose a target");
                    // If not our turn, allow this card to be selected as a combat target
                    combat_allowSelectAsTarget();
                    // Initiate Attack on Target
                    combat_initiateAttackTarget();
                }
            }
        }
    }
}
