    if (global.GAME_PHASE == "combat") {
        draw_text(bannerX, bannerY, "COMBAT PHASE");
    }
    
    if (global.GAME_PHASE == "main2") {
        draw_text(bannerX, bannerY, "MAIN PHASE 2");
    }
    
    if (global.GAME_PHASE == "endturn") {
        draw_text(bannerX, bannerY, "END TURN");
    }
}

